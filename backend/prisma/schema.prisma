generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt DateTime
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  is_admin Boolean @default(false)
  fname    String
  lname    String
  alias    String
  password String 
}

 model Game {
  id                  Int          @id @default(autoincrement())
  igdbId              Int   @unique
  name                String
  slug                String       @unique
  summary             String?      @db.Text
  storyline           String?      @db.Text
  firstReleaseDate    DateTime?
  coverUrl            String?
  rating              Float?
  aggregatedRating    Float?
  totalRating         Float?
  totalRatingCount    Int?
  url                 String?

  // Relations
  genres              Genre[]      @relation("GameGenres")
  platforms           Platform[]   @relation("GamePlatforms")
  covers              Cover[]      
  screenshots         Screenshot[]
}

model Platform {
  id           Int     @id 
  name         String
  abbreviation String?
  generation   Int?
  slug         String
  platformLogo Int?

  games Game[] @relation("GamePlatforms")
}

model Genre {
  id    Int     @id @default(autoincrement())
  igdbId              Int    @unique
  name  String?
  slug  String?
  games Game[] @relation("GameGenres")
}

model Cover {
  id      Int    @id @default(autoincrement())
  igdbId              Int    @unique
  imageId String?
  url     String?
  height  Int?
  width   Int?

  gameId  Int
  game    Game   @relation(fields: [gameId], references: [id])
}

model Screenshot {
  id      Int    @id @default(autoincrement())
  igdbId              Int    @unique
  imageId String?
  url     String?
  height  Int?
  width   Int?

  gameId  Int
  game    Game   @relation(fields: [gameId], references: [id])
}




