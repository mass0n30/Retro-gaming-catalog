generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt DateTime
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  is_admin Boolean @default(false)
  fname    String
  lname    String
  alias    String
  password String 
}

  model Game {
  id                  Int                 @id @unique // IGDB ID
  name                String
  slug                String              @unique
  summary             String?             @db.Text
  storyline           String?             @db.Text
  firstReleaseDate    DateTime?
  coverUrl            String?
  rating              Float?
  aggregatedRating    Float?
  totalRating         Float?
  totalRatingCount    Int?
  url                 String?

  // Relations
  genres              Genre[]             @relation("GameGenres") // no constraints
  platforms           Platform[]          @relation("GamePlatforms") // no constraints
  screenshots        Screenshot[]       @relation("GameScreenshots") // no constraints
  covers           Cover[]             @relation("GameCovers") // no constraints

}


model Platform {
  id            Int     @id
  name          String
  abbreviation  String?
  generation    Int?
  slug          String
  platformLogo  Int?    // for icon logo possibly
  
  Game Game[] @relation("GamePlatforms")
}

model Genre {
  id        Int     @id @unique // IGDB ID
  name      String
  games     Game[]  @relation("GameGenres")
}




